// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMINISTRATEUR
  GESTIONNAIRE_FINANCIER
  GESTIONNAIRE_DE_STOCK
  UTILISATEUR
}

model User {
  id              Int               @id @default(autoincrement())
  name            String
  email           String            @unique
  password        String
  role            Role
  departement     String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  deletedAt       DateTime?
  purchaseRequest PurchaseRequest[] @relation("UserPurchaseRequest")
  Notification    Notification[]
  Historique      Historique[]
}

model PurchaseRequest {
  id                     Int                      @id @default(autoincrement())
  label                  String
  price                  Float
  status                 String
  urgent                 Boolean                  @default(false)
  validerId              Int?
  userId                 Int
  user                   User                     @relation("UserPurchaseRequest", fields: [userId], references: [id])
  createdAt              DateTime                 @default(now())
  updatedAt              DateTime                 @updatedAt
  deletedAt              DateTime?
  PurchaseRequestArticle PurchaseRequestArticle[]
  Commande               Commande[]
}

model Supplier {
  id         Int       @id @default(autoincrement())
  name       String
  address    String
  mail       String?
  tel        String?
  evaluation Int?
  categorie  String?
  longitude  Float?
  latitude   Float?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  deletedAt  DateTime?
  articles   Article[]
}

model Article {
  id                     Int                      @id @default(autoincrement())
  nom                    String
  description            String?
  price                  Float
  unite                  String
  supplierId             Int
  supplier               Supplier                 @relation(fields: [supplierId], references: [id])
  image                  String?
  QttOnStock             Int                      @default(0)
  createdAt              DateTime                 @default(now())
  updatedAt              DateTime                 @updatedAt
  deletedAt              DateTime?
  PurchaseRequestArticle PurchaseRequestArticle[]
  DeliveryArticle        DeliveryArticle[]
}

model PurchaseRequestArticle {
  id                Int             @id @default(autoincrement())
  purchaseRequestId Int
  purchaseRequest   PurchaseRequest @relation(fields: [purchaseRequestId], references: [id])
  articleId         Int
  article           Article         @relation(fields: [articleId], references: [id])
  quantity          Int             @default(1)
  status            String?
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  deletedAt         DateTime?
}

enum OrderStatus {
  PENDING
  APPROVED
  DELIVERED
  CANCELLED
}

enum DeliveryStatus {
  PENDING
  PARTIAL
  COMPLETE
  DELAYED
}

model Budget {
  id        Int        @id @default(autoincrement())
  montant   Float 
  year      Int 
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  deletedAt DateTime?
  commandes Commande[] 
}

model Commande {
  id                Int             @id @default(autoincrement())
  purchaseRequestId Int
  purchaseRequest   PurchaseRequest @relation(fields: [purchaseRequestId], references: [id])
  budgetId          Int
  budget            Budget          @relation(fields: [budgetId], references: [id])
  label             String
  status            String? 
  delai             DateTime? 
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  deletedAt         DateTime?
  deliveries        Delivery[] 
}

model Delivery {
  id              Int               @id @default(autoincrement())
  commandeId      Int
  commande        Commande          @relation(fields: [commandeId], references: [id])
  deliveryDate    DateTime
  docs            String? 
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  deletedAt       DateTime?
  DeliveryArticle DeliveryArticle[]
}



model DeliveryArticle {
  id         Int       @id @default(autoincrement())
  deliveryId Int
  delivery   Delivery  @relation(fields: [deliveryId], references: [id])
  articleId  Int
  article    Article   @relation(fields: [articleId], references: [id])
  quantity   Int       @default(1) // Changed from Qtt to quantity
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  deletedAt  DateTime?

  @@unique([deliveryId, articleId]) 
}

model Notification {
  id        Int       @id @default(autoincrement())
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
  label     String
  read      Boolean   @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model Historique {
  id        Int       @id @default(autoincrement())
  titre     String 
  label     String
  userId    Int?
  user      User?     @relation(fields: [userId], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}
