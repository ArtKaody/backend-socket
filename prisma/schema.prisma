// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id              Int                @id @default(autoincrement())
  name            String
  email           String             @unique
  password        String
  role            String
  departement     String?
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  deletedAt       DateTime?
  purchaseRequest PurchaseRequests[] @relation("UserPurchaseRequest")
  Notification    Notifications[]
  Historique      Historiques[]
}

model PurchaseRequests {
  id                     Int                       @id @default(autoincrement())
  label                  String
  price                  Float
  status                 String
  urgent                 Boolean                   @default(false)
  validerId              Int?
  userId                 Int
  user                   Users                     @relation("UserPurchaseRequest", fields: [userId], references: [id])
  createdAt              DateTime                  @default(now())
  updatedAt              DateTime                  @updatedAt
  deletedAt              DateTime?
  PurchaseRequestArticle PurchaseRequestArticles[]
  Commande               Commandes[]
}

model PurchaseRequestArticles {
  id                Int              @id @default(autoincrement())
  purchaseRequestId Int
  purchaseRequest   PurchaseRequests @relation(fields: [purchaseRequestId], references: [id])
  articleId         Int
  article           Articles         @relation(fields: [articleId], references: [id])
  quantity          Int              @default(1)
  status            String?
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  deletedAt         DateTime?
}

enum OrderStatus {
  PENDING
  APPROVED
  DELIVERED
  CANCELLED
}

enum DeliveryStatus {
  PENDING
  PARTIAL
  COMPLETE
  DELAYED
}

model Budgets {
  id        Int         @id @default(autoincrement())
  montant   Float
  year      Int
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  deletedAt DateTime?
  commandes Commandes[]
}

model Commandes {
  id                Int              @id @default(autoincrement())
  purchaseRequestId Int
  purchaseRequest   PurchaseRequests @relation(fields: [purchaseRequestId], references: [id])
  budgetId          Int
  budget            Budgets          @relation(fields: [budgetId], references: [id])
  label             String
  status            String?
  delai             DateTime?
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  deletedAt         DateTime?
  deliveries        Deliveries[]
}

model DeliveryArticles {
  id         Int        @id @default(autoincrement())
  deliveryId Int
  delivery   Deliveries @relation(fields: [deliveryId], references: [id])
  articleId  Int
  article    Articles   @relation(fields: [articleId], references: [id])
  quantity   Int        @default(1) // Changed from Qtt to quantity
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  deletedAt  DateTime?

  @@unique([deliveryId, articleId])
}

model Notifications {
  id        Int       @id @default(autoincrement())
  userId    Int
  user      Users     @relation(fields: [userId], references: [id])
  label     String
  read      Boolean   @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model Historiques {
  id        Int       @id @default(autoincrement())
  titre     String
  label     String
  userId    Int?
  user      Users?    @relation(fields: [userId], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model Litige {
  id             Int              @id @default(autoincrement())
  deliveryId     Int
  delivery       Deliveries       @relation(fields: [deliveryId], references: [id])
  supplierId     Int
  supplier       Suppliers        @relation(fields: [supplierId], references: [id])
  docs           String?
  litigeArticles LitigeArticles[]
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  deletedAt      DateTime?
}

model LitigeArticles {
  id         Int        @id @default(autoincrement())
  deliveryId Int
  delivery   Deliveries @relation(fields: [deliveryId], references: [id])
  articleId  Int
  article    Articles   @relation(fields: [articleId], references: [id])
  quantity   Int        @default(1)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  deletedAt  DateTime?
  Litige     Litige?    @relation(fields: [litigeId], references: [id])
  litigeId   Int?

  @@unique([deliveryId, articleId])
}

model Deliveries {
  id               Int                @id @default(autoincrement())
  commandeId       Int
  commande         Commandes          @relation(fields: [commandeId], references: [id])
  deliveryDate     DateTime
  docs             String?
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  deletedAt        DateTime?
  deliveryArticles DeliveryArticles[]
  litige           Litige[]
  LitigeArticles   LitigeArticles[]
}

model Articles {
  id                      Int                       @id @default(autoincrement())
  name                    String
  description             String?
  price                   Float
  unite                   String
  supplierId              Int
  supplier                Suppliers                 @relation(fields: [supplierId], references: [id])
  image                   String?
  qttOnStock              Int                       @default(0)
  createdAt               DateTime                  @default(now())
  updatedAt               DateTime                  @updatedAt
  deletedAt               DateTime?
  purchaseRequestArticles PurchaseRequestArticles[]
  deliveryArticles        DeliveryArticles[]
  litigeArticles          LitigeArticles[]
}

model Suppliers {
  id         Int        @id @default(autoincrement())
  name       String
  address    String
  mail       String?
  tel        String?
  evaluation Int?
  categorie  String?
  longitude  Float?
  latitude   Float?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  deletedAt  DateTime?
  articles   Articles[]
  litiges    Litige[]
}
